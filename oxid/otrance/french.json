{
    "name": "French translations for OXID eShop",
    "vendor": "otrance",
    "type": "oxid",
    "price": "0.00",
    "license": "GPLv3",
    "desc": {
        "en": "French language file translations for OXID eShop front end and admin panel"
    },
    "tags": [
        "frontend",
        "admin",
        "translation",
        "language"
    ],
    "versions": {
        "4.9.2": {
            "project": "https://github.com/OXIDprojects/languages",
            "url": "https://github.com/OXIDprojects/languages/archive/master.zip",
            "supported": [
                "4.9",
                "4.8"
            ],
            "mapping": [
                {
                    "src": "application/translations/fr/",
                    "dest": "application/translations/fr/"
                },
                {
                    "src": "application/views/azure/fr/",
                    "dest": "application/views/azure/fr/"
                },
                {
                    "src": "application/views/admin/fr/",
                    "dest": "application/views/admin/fr/"
                },
                {
                    "src": "out/azure/img/lang/fr.png",
                    "dest": "out/azure/img/lang/"
                }
            ]
        }
    },
    "hooks": {
        "postinstall": {
            "type": "overlay",
            "message": "Please go to admin -> Master settings -> Languages. Create a new language by entering \"fr\" as locale and \"Fran\u00e7ais\" as name. If you find any mistakes please feel free to register at the translation center.",
            "link": "http://translate.oxidforge.org"
        }
    }
}